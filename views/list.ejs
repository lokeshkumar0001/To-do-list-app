<%- include("header") -%>

<body>

  <div class="box" id="heading">
    <h1><%=listTitle%></h1>
  </div>


    <div class="box">
     <% newListItems.forEach((listItem)=>{ %>

      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkBox" value="<%= listItem._id %> " onchange="this.form.submit()">
          <p><%= listItem.name %></p>
        </div>
          <input type="hidden" name="listName" value="<%= listTitle %> ">
      </form>
        
      <% }) %>

     
      <form class="item"action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item">
        <button type="submit" name="button" value=<%= listTitle %>>+</button>
      </form>
    </div>
</body>

<%- include("footer") -%>
